<div class="cross-lockable-screen" data-cross-lockable-origin="<%= origin %>">
  <div class="cross-lockable-screen-box"></div>

  <script type="text/html" data-template-name="cross-lockable-screen">
    <%= form_for(current_user, url: url, method: :post, html: { target: 'cross-lockable-iframe' }) do |f| %>

      <h2>Sessão travada!</h2>

      <p>Por questões de segurança a aua sessão está travada.</p>
      <p>Digite sua senha abaixo para destravá-la.</p>

      <fieldset>
        <%= f.hidden_field :email, value: current_user.email %>

        <div class="control-group password">
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-asterisk"></i></span>

              <%= f.password_field :password, required: false %>

              <span class="help-block lock-screen-error">Senha inválida.</span>
            </div>
          </div>
        </div>
      </fieldset>

      <div class= "actions">
        <%= button_tag :submit, class: 'btn btn-success btn-large', data: { disable_with: 'Entrando...' } do %>
          <%= content_tag(:i, nil, class: 'icon-off icon-white') %>
          <%= 'Entrar' %>
        <% end -%>
      </div>
    <% end %>
  </script>

  <iframe id="cross-lockable-iframe" name="cross-lockable-iframe"></iframe>
</div>
